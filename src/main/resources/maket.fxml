<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.apache_maven.ChessController">
    <children>
        <!-- Элемент-индикатор, который будет показывать цвет хода -->
        <Rectangle fx:id="turnColorRectangle" width="80.0" height="80.0" fill="white"
                   AnchorPane.leftAnchor="70.0"
                   AnchorPane.topAnchor="100.0"/>
        <!-- Игровое поле -->
        <GridPane fx:id="chessBoardGrid" alignment="CENTER" gridLinesVisible="true"
                  maxWidth="640" prefHeight="600.0" prefWidth="600.0"
                  AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="0.0"
                  AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0" />
                <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="NEVER" />
                <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="NEVER" />
                <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="NEVER" />
                <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="NEVER" />
                <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="NEVER" />
                <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="NEVER" />
                <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="NEVER" />
                <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" vgrow="NEVER" />
            </rowConstraints>
        </GridPane>
    </children>
</AnchorPane>
